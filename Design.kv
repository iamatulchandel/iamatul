<LoginScreen>:
    GridLayout:
        padding:15,15
        spacing:20,20
        cols: 1
        GridLayout:
            cols:1
            Label:
                text: "USER LOGIN"
                font_size: "20sp"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password:"True"
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.logged_in(root.ids.username.text,root.ids.password.text)
                    size_hint:0.3,0.5
                    pos_hint: {'center_x':0.5,'centre_y':0.6}
            Label:
                id: wrong_password
                text: ""
        GridLayout:
            cols: 2
            size_hint:0.2,0.2
            padding:10,10
            spacing:10,0
            Button:
                text: "Forgot Password"
                background_color: 1,1,1,0
                opacity: 1 if self.state== 'normal' else 0.5
                color:0.1,0.7,1,1
                on_press: root.forgot()
            Button:
                text: "Sign Up"
                background_color:1,1,1,0
                opacity: 1 if self.state== 'normal' else 0.5
                color:0.1,0.7,1,1
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding:20,20
        spacing:20,20
        Label:
            text: "SIGN UP ASAP PRO SIR"
        TextInput:
            size_hint:0.3,0.5
            id: username
            hint_text:"UserName"
        TextInput:
            size_hint:0.3,0.5
            id: password
            hint_text:"Password"
        Button:
            pos_hint:{'centre_x':0.5,'centre_y':0.6}
            color:0.5,0.5,1,1
            background_color:1,1,1,0
            text:"SIGN UP"
            on_press : root.add_entry(root.ids.username.text,root.ids.password.text)

<SignUpScreenSuccess>
    GridLayout:
        cols:1
        padding:20,20
        spacing:30,30
        Label:
            text:"SIGN UP IS SUCCESSFUL NOOB"
        Button:
            size_hint:0.3,0.5
            pos_hint: {'center_x':0.5,'centre_y':0.6}
            text:"Login Page"
            background_color:1,1,1,0
            opacity: 1 if self.state== 'normal' else 0.5
            color:0.1,0.7,1,1
            on_press: root.login_page()
<LoginScreenSuccess>
    GridLayout:
        cols:1
        padding:30,30
        spacing:30,30
        RelativeLayout:
            ImageButton:
                source:'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint:0.35,0.35
                pos_hint: {'center_x':0.93, 'center_y': 0.8}
                on_press: root.log_out()
        Label:
            text:"How Do You Feel"
        TextInput:
            id:feeling
            hint_text: "Happy,Sad,Unloved (Choose From These three)"
        Button:
            pos_hint:{'centre_x':0.5,'centre_y':0.6}
            color:0.5,0.5,1,1
            background_color:1,1,1,0
            text:"Enlighten Me"
            opacity: 1 if self.state== 'normal' else 0.5
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id:quote
                text:""
                text_size: self.width,None
                size_hint_y:None
                height:self.texture_size[1]
<ForgotPasswordScreen>:
    GridLayout:
        cols:1
        padding:30,30
        spacing:30,30
        Label:
            text:"Don't Worry, SignUp Again Using Other Credentials"
        Button:
            size_hint:0.35,0.35
            pos_hint:{'center_x':0.5,'center_y':0.6}
            color:1,0.2,0.5,0.6
            text:"Go To SignUp Screen"
            background_color: 1,1,1,0.2
            on_press: root.go_to_signup()
        Button:
            size_hint:0.35,0.35
            pos_hint:{'center_x':0.5,'center_y':0.6}
            color:1,0.2,0.5,0.6
            background_color: 1,1,1,0.2
            text:"Go To LogIn Screen Back"
            on_press:root.go_to_login()
<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signup_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"
    ForgotPasswordScreen:
        name:"forgot_password"
